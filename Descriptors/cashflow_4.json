{
  "id": "urn:dmb:dp:finance:cashflow_4:0",
  "name": "cashflow_4",
  "version": "0.3.4",
  "fullyQualifiedName": "Liquidity Cash Flows v3 \u2014 4",
  "domain": "finance/liquidity",
  "tags": [
    "finance",
    "gdpr",
    "internal"
  ],
  "orchestration": {
    "tool": "dbt",
    "details": {
      "models": [
        "stg_cashflow",
        "dim_cashflow"
      ]
    }
  },
  "qualityControls": {
    "framework": "GreatExpectations",
    "controls": [
      {
        "expectation": "expect_column_values_to_not_be_null",
        "columns": [
          "ID"
        ]
      },
      {
        "expectation": "expect_column_values_to_be_between",
        "column": "Amount",
        "min": 0
      },
      {
        "expectation": "expect_column_values_to_be_in_set",
        "column": "Direction",
        "set": [
          "IN",
          "OUT"
        ]
      },
      {
        "expectation": "expect_table_row_count_to_be_between",
        "min": 1
      },
      {
        "expectation": "expect_column_values_to_match_regex",
        "column": "ID",
        "regex": "^[A-Za-z0-9\\-]+$"
      }
    ]
  },
  "workloads": [
    {
      "name": "purge_personal_data",
      "type": "lambda",
      "description": "Implements right to be forgotten by purging matching records."
    }
  ],
  "metadata": {
    "owner": {
      "team": "Treasury IT",
      "contact": "treasury-engineering@example.org"
    },
    "costCenter": "FIN-TRS",
    "classification": "restricted",
    "description": "Data product delivering cash movement facts; non-sensitive aggregates only."
  },
  "observability": {
    "metrics": [
      "row_count",
      "null_rate",
      "latency"
    ],
    "logging": {
      "level": "DEBUG",
      "retentionDays": 14
    }
  },
  "lineage": {
    "upstreamSources": [
      {
        "system": "ERP",
        "object": "GL_Bookings"
      },
      {
        "system": "BankAPI",
        "object": "Statements"
      }
    ]
  },
  "dataContracts": [
    {
      "id": "urn:dmb:dp:finance:cashflow_4:0:bigquerytable_output",
      "type": "BigQueryTable",
      "schema": [
        {
          "name": "ID",
          "dataType": "STRING",
          "description": "Unique internal identifier for a cash flow row."
        },
        {
          "name": "Amount",
          "dataType": "DECIMAL(18,2)",
          "description": "Monetary movement in EUR; non-negative."
        },
        {
          "name": "Direction",
          "dataType": "STRING",
          "description": "IN for incoming cash, OUT for outgoing cash."
        },
        {
          "name": "BookingDate",
          "dataType": "DATE",
          "description": "Ledger posting date."
        }
      ],
      "columnTags": {
        "Direction": {
          "businessTerms": [
            "FundingSource",
            "CashFlowDirection",
            "PostingChannel"
          ]
        }
      },
      "sla": {
        "intervalOfChange": "P2D",
        "timeliness": "PT1H",
        "upTime": 0.983
      }
    },
    {
      "id": "urn:dmb:dp:finance:cashflow_4:0:kafka_output",
      "type": "KafkaTopic",
      "topic": "liquidity.cashflow.variant.4",
      "partitions": 6,
      "retentionDays": 9,
      "schema": [
        {
          "name": "ID",
          "dataType": "STRING"
        },
        {
          "name": "Amount",
          "dataType": "DOUBLE"
        },
        {
          "name": "Direction",
          "dataType": "STRING"
        },
        {
          "name": "EventTime",
          "dataType": "TIMESTAMP"
        }
      ],
      "columnTags": {
        "Direction": {
          "businessTerms": [
            "CounterpartyCategory",
            "CashMovementType",
            "SettlementMethod"
          ]
        }
      }
    },
    {
      "id": "urn:dmb:dp:finance:cashflow_4:0:deltatable_aux",
      "type": "DeltaTable",
      "schema": [
        {
          "name": "ID",
          "dataType": "STRING",
          "description": "Primary event identifier."
        },
        {
          "name": "Amount",
          "dataType": "NUMERIC",
          "description": "Amount in EUR, zero or positive."
        },
        {
          "name": "Direction",
          "dataType": "STRING",
          "description": "Direction of cash flow."
        },
        {
          "name": "BookingDate",
          "dataType": "DATE",
          "description": "Accounting date."
        },
        {
          "name": "EventTime",
          "dataType": "TIMESTAMP",
          "description": "Event timestamp."
        }
      ],
      "sla": {
        "intervalOfChange": "P1D",
        "timeliness": "PT30M",
        "upTime": 0.98
      }
    }
  ],
  "notes": [
    "Variant 4: topic=liquidity.cashflow.variant.4, partitions=6, retention=9d.",
    "Descriptions in streaming schema are intentionally absent to test contract completeness checks.",
    "No PII is modeled; GDPR tag remains at product level only."
  ]
}