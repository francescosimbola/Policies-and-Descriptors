{
  "id": "urn:dmb:dp:finance:cashflow_3:0",
  "name": "cashflow_3",
  "version": "0.3.3",
  "fullyQualifiedName": "Liquidity Cash Flows v3 \u2014 3",
  "domain": "finance/liquidity",
  "tags": [
    "finance",
    "gdpr",
    "internal"
  ],
  "orchestration": {
    "tool": "Prefect",
    "details": {
      "flows": [
        "cashflow_build"
      ]
    }
  },
  "qualityControls": {
    "framework": "GreatExpectations",
    "controls": [
      {
        "expectation": "expect_column_values_to_not_be_null",
        "columns": [
          "CF_ID"
        ]
      },
      {
        "expectation": "expect_column_values_to_be_between",
        "column": "GrossAmount",
        "min": 0
      },
      {
        "expectation": "expect_column_values_to_be_in_set",
        "column": "FlowType",
        "set": [
          "IN",
          "OUT"
        ]
      }
    ],
    "additionalFrameworks": [
      "Deequ"
    ]
  },
  "workloads": [
    {
      "name": "purge_personal_data",
      "type": "lambda",
      "description": "Implements right to be forgotten by purging matching records."
    }
  ],
  "metadata": {
    "owner": {
      "team": "Treasury IT",
      "contact": "treasury-engineering@example.org"
    },
    "costCenter": "FIN-CF",
    "classification": "internal",
    "description": "Data product delivering cash movement facts; non-sensitive aggregates only."
  },
  "observability": {
    "metrics": [
      "row_count",
      "null_rate",
      "latency"
    ],
    "logging": {
      "level": "INFO",
      "retentionDays": 14
    }
  },
  "lineage": {
    "upstreamSources": [
      {
        "system": "ERP",
        "object": "Treasury_Transfers"
      },
      {
        "system": "BankAPI",
        "object": "Statements"
      }
    ]
  },
  "dataContracts": [
    {
      "id": "urn:dmb:dp:finance:cashflow_3:0:sqltable_output",
      "type": "SQLTable",
      "schema": [
        {
          "name": "CF_ID",
          "dataType": "STRING",
          "description": "Unique internal identifier for a cash flow row."
        },
        {
          "name": "GrossAmount",
          "dataType": "DECIMAL(18,2)",
          "description": "Monetary movement in EUR; non-negative."
        },
        {
          "name": "FlowType",
          "dataType": "STRING",
          "description": "IN for incoming cash, OUT for outgoing cash."
        },
        {
          "name": "GLDate",
          "dataType": "DATE",
          "description": "Ledger posting date."
        }
      ],
      "columnTags": {
        "FlowType": {
          "businessTerms": [
            "AccountingPeriod",
            "FundingSource"
          ]
        }
      },
      "sla": {
        "intervalOfChange": "P2D",
        "timeliness": "PT45M",
        "upTime": 0.975
      }
    },
    {
      "id": "urn:dmb:dp:finance:cashflow_3:0:kafka_output",
      "type": "KafkaTopic",
      "topic": "liquidity.cashflow.variant.3",
      "partitions": 5,
      "retentionDays": 8,
      "schema": [
        {
          "name": "CF_ID",
          "dataType": "STRING"
        },
        {
          "name": "GrossAmount",
          "dataType": "DOUBLE"
        },
        {
          "name": "FlowType",
          "dataType": "STRING"
        },
        {
          "name": "EventTime",
          "dataType": "TIMESTAMP"
        }
      ],
      "columnTags": {
        "FlowType": {
          "businessTerms": [
            "CounterpartyCategory",
            "PostingChannel",
            "CashMovementType"
          ]
        }
      }
    },
    {
      "id": "urn:dmb:dp:finance:cashflow_3:0:s3parquet_aux",
      "type": "S3Parquet",
      "schema": [
        {
          "name": "CF_ID",
          "dataType": "STRING",
          "description": "Primary event identifier."
        },
        {
          "name": "GrossAmount",
          "dataType": "NUMERIC",
          "description": "Amount in EUR, zero or positive."
        },
        {
          "name": "FlowType",
          "dataType": "STRING",
          "description": "Direction of cash flow."
        },
        {
          "name": "GLDate",
          "dataType": "DATE",
          "description": "Accounting date."
        },
        {
          "name": "EventTime",
          "dataType": "TIMESTAMP",
          "description": "Event timestamp."
        }
      ],
      "sla": {
        "intervalOfChange": "P2D",
        "timeliness": "PT45M",
        "upTime": 0.988
      }
    }
  ],
  "notes": [
    "Variant 3: topic=liquidity.cashflow.variant.3, partitions=5, retention=8d.",
    "Descriptions in streaming schema are intentionally absent to test contract completeness checks.",
    "No PII is modeled; GDPR tag remains at product level only."
  ]
}